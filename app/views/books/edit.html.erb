<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book, url: book_path) do |f| %>
      <% if @book.errors.any? %>
      <div class="error-message">
        <h4 class="error-message-lead"><strong><%= @book.errors.count %> errors prohibited this user from being saved:</h4></strong>
        <ul class="error-message-details">
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="field row">
        <label>Title</label>
        <div><%= f.text_field :title, class: "col-xs-12 book_title" %></div>
      </div>
      <div class="field row">
        <label>Opinion</label>
        <div><%= f.text_area :body, class: "col-xs-12 book_body" %></div>
      </div>
      <div class="actions row">
        <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
      </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>